# ===============================
# MONOREPO: todas las variables en un solo lugar
# Copiar a .env.local y completar valores.
# Web (Next) usa NEXT_PUBLIC_*; Mobile (Expo) usa EXPO_PUBLIC_*.
# ===============================

# ===============================
# CRON / INTERNAL SECURITY
# ===============================
CRON_API_KEY="change-me"
CRON_SECRET="change-me-in-production"

# ===============================
# FIREBASE (SERVER / ADMIN SDK)
# ===============================
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_CLIENT_ID="123456789012345678901"
FIREBASE_PRIVATE_KEY_ID="your-private-key-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# ===============================
# FIREBASE (CLIENT) - Web
# ===============================
NEXT_PUBLIC_FIREBASE_API_KEY="your-public-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789012"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789012:web:abcdef123456"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_FIREBASE_VAPID_KEY="your-vapid-key"

# ===============================
# FIREBASE (CLIENT) - Mobile
# ===============================
EXPO_PUBLIC_FIREBASE_API_KEY="your-public-firebase-api-key"
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
EXPO_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789012"
EXPO_PUBLIC_FIREBASE_APP_ID="1:123456789012:web:abcdef123456"
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"

# ===============================
# APP CONFIG
# ===============================
NEXT_PUBLIC_APP_VERSION="0.0.0"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
EXPO_PUBLIC_API_URL="http://localhost:3000"

# ===============================
# EMAIL (MAILERSEND)
# ===============================
MAILERSEND_API_KEY="your-mailersend-api-key"
MAILERSEND_FROM_EMAIL="no-reply@yourdomain.com"
MAILERSEND_FROM_NAME="Your App Name"
MAILERSEND_TEMPLATE_ID="template-id"
MAILERSEND_TO_EMAIL="test@yourdomain.com"
NOTIFICATION_EMAIL="alerts@yourdomain.com"

# ===============================
# MAPS, CAPTCHA, GOOGLE
# ===============================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===============================
# PAYMENTS (STRIPE)
# ===============================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxx"

# ===============================
# AI / EXTERNAL APIS
# ===============================
OPENAI_API_KEY="sk-your-openai-key"
PERPLEXITY_API_KEY="pplx-your-perplexity-key"

# ===============================
# PINECONE (RAG CHATBOT)
# ===============================
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX_NAME="retp-tutorial-2"

# ===============================
# SENTRY
# ===============================
SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
