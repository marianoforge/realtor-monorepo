{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@gds-si/shared-types": ["libs/shared-types/src/index.ts"],
      "@gds-si/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@gds-si/shared-schemas": ["libs/shared-schemas/src/index.ts"],
      "@gds-si/shared-schemas/*": ["libs/shared-schemas/src/*"],
      "@gds-si/shared-stores": ["libs/shared-stores/src/index.ts"],
      "@gds-si/shared-stores/*": ["libs/shared-stores/src/*"],
      "@gds-si/shared-api": ["libs/shared-api/src/index.ts"],
      "@gds-si/shared-api/*": ["libs/shared-api/src/*"],
      "@gds-si/shared-hooks": ["libs/shared-hooks/src/index.ts"],
      "@gds-si/shared-hooks/*": ["libs/shared-hooks/src/*"],
      "@gds-si/shared-assets": ["libs/shared-assets/src/index.ts"],
      "@gds-si/shared-assets/*": ["libs/shared-assets/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
